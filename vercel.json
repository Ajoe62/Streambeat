{
    "version": 2,
    "builds": [
        {
            "src": "mychat/wsgi.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.10"
            }
        },
        {
            "src": "build.sh",
            "use":"@vercel/static-build",
            "config":{
                "distDir": "staticfiles"
            }
        }
    ],
    "routes": [
        {
            "src":"/static/(.*)",
            "dest":"/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "mychat/wsgi.py"
        }
    ]
}
